<?xml version="1.0" ?>

<launch>

    <!-- DO NOT used "joint_state_publisher" with remapping "arm/joint_states" -->
    <!-- "arm/ros_joint_states"! Two controllers, armsim and joint_state_publisher -->
    <!-- will be in conflict with each other! -->
    <node pkg="armsim" type="arm_sim" name="arm" output="screen">
        <param name="robot_description" type="str"
            textfile="$(find gambit_driver)/urdf/gambit.urdf"/>
    </node>
    <group ns="arm">
        <node pkg="robot_state_publisher" type="state_publisher" name="arm_state_pub">
            <remap from="joint_states" to="ros_joint_state"/>
        </node>

        <!-- Need to call below script to enable actuators of the armsim node-->
        <node pkg="armsim" type="enable_gambit_DOFs_sim.py" name="enable_simDOFs"/>
    </group>
</launch>

